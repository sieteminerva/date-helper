{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "lib": [
      "ES2015"
    ],
    "module": "ES6",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}